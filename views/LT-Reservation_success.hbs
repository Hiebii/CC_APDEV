    <body>
        <div class="header">
            <img class="imglogo" src="images/tinkerlablogo.png">
        </div>
        <div class="taskbar">
            <div class="btndivider">
                <a href="/LT-homepage">
                    <button class="btndesign" id="homebtn">Home</button>
                </a>
            </div>
            <div class="btndivider">
                <a href="/LAndrew">
                <button class="btndesign" id="reservationbtn">Reservation</button>
               </a>
            </div>
            <div class="btndivider">
                <a href="/LT-View-Edit">
                <button class="btndesign" id="vieweditbtn">View/Edit</button>
                </a>
            </div>
            <div class="btndivider">
                <a href="/LT-Profile">
                    <button class="btndesign" id="profilebtn">Profile</button>
                </a>
            </div>
            
            <form id="searchForm" action="/search2" method="GET" autocomplete="off">
            <div class="searchdivider">
                <div class="searchfield">
                    <input class="searchinput" type="text" name="name" placeholder="Search..." required>
                    <button class="searchbutton" type="submit">
                        <img src="images/searchglass.png" class="imgbtn" alt="Search">
                    </button>
                </div>
                <div class="suggestions-div">
                    <div class="suggestion-card">
                        <!--  a href cards of users will be inserted here -->
                    </div>
                </div>
            </div>
        </form>
           
        </div>

        <div class="container">
            <img class="comp-image" src="images/background.jpg"/>
            <div class="overlay">
                <div class="title-2">
                    YOU HAVE SUCCESSFULLY <br>RESERVED A SLOT!
                </div>
                <div class="outer-box">
                <ul class="details">
                    <li><span class="bold">Reserver Name: {{ reserverName }}</span></li>
                    <li><span class="bold">Reserved By: {{ fullName }}</span></li>
                    <li><span class="bold">Anonymous: {{ anonyname }}</span></li>
                    <li><span class="bold">Computer Lab:</span> {{ lab }}</li>
                    <li><span class="bold">Seat No.:</span> {{ seatNames }}</li>
                    <li><span class="bold">Date of Request:</span> {{ dateofrequest }}</li>
                    <li><span class="bold">Time of Request:</span> {{ timeofrequest }}</li>
                    <li><span class="bold">Date of Reservation:</span> {{ dateofreservation }}</li>
                    <li><span class="bold">Time of Reservation:</span> {{ timeofreservation }}</li>
                </ul>
            </div>              
                <div class="button-container">
                    <button class="purple-button"><a href="/LT-homepage">Return Home</a></button>
                </div> 
            </div>
        </div>        
    </body>
