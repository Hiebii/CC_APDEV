    <script>
    // JavaScript for submitting form data
    function collectAndSendData() {
        const fullName = document.getElementById('fullName').value;
        const isAnonymous = document.getElementById('anonymousCheckbox').checked ? 1 : 0;

        const data = {
            fullName: fullName,
            anonymous: isAnonymous,
            lab: "{{ lab }}", // Replace with actual lab data
            seatNames: "{{ seatNames }}", // Replace with actual seat data
            dateofrequest: "{{ dateofrequest }}", // Replace with actual date data
            timeofrequest: "{{ timeofrequest }}", // Replace with actual time data
            dateofreservation: "{{ dateofreservation }}", // Replace with actual reservation date data
            timeofreservation: "{{ timeofreservation }}" // Replace with actual reservation time data
        };

        fetch('/CT-View-Edit_success-edit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/CT-View-Edit_success-edit'; // Redirect to confirmation page
            } else {
                console.error('Failed to send data');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>

